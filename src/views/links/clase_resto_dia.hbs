<style>
    body {
        background-image: url('/img/bkg.svg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100%;
    }
</style>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-3 sticky-top">
                <div>
                    {{>menu}}
                </div>
            </div>
            <div class="col-9">
                <h4 class="text-center">Proximas clases</h4>
                <hr class="mb-4">
                <div class="container mx-auto shadow-sm text-center" style="background-color: rgb(223, 223, 223);">
                    <div class="py-3">

                        {{#if resto}}

                        {{else}}
                        {{#each resto}}
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="text-center p-3 mt-2">
                                        <b>Nombre de tu clase: </b>{{nombre_clase}}
                                        <b>Inicio: </b>{{horai_clase}}:00 hrs.
                                        <b>Termino: </b>{{horat_clase}}:00 hrs.
                                    </h6>
                                    <br>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        <div class="p-3">
                            <h5>No tienes más clases por hoy</h5><br>
                            <img class="mt-3 mr-auto rounded-circle"
                            src="https://i.pinimg.com/originals/a1/16/72/a1167211bffbc81f616db1ef850aee2d.png"
                            alt="not data found" width="100%" height="80%">
                            <br>
                            <br>
                            {{!-- <p> Crea tu primera nota ahora presionando <a href="clase_tomar_nota">aquí</a> </p> --}}
                        </div>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    {{>footer}}

    <script src="/js/reloj.js"></script>

</body>