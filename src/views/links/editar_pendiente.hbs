{{#each pendiente}}

<div class="container p-4">
    <div class="row">
        <div class=" col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editar_pendiente_vista" method="POST">
                    <div class="from-group">
                        <input type="hidden" value="{{id_pendiente}}" name="id">
                    </div>
                    <div class="form-group">
                        <input type="text" value = "{{nombre_pendiente}}" class="form-control" name="nombre" placeholder="Nombre del pendiente" pattern="^[a-zA-ZÀ-ÿ\u00f1\u00d1]+(\s*[a-zA-ZÀ-ÿ\u00f1\u00d1]*)*[a-zA-ZÀ-ÿ\u00f1\u00d1]+$">
                    </div>
                    <div class="form-group">
                        <input type="text" value = "{{desc_pendiente}}" class="form-control" name="desc" placeholder="Descripcion" pattern="^[a-zA-ZÀ-ÿ\u00f1\u00d1]+(\s*[a-zA-ZÀ-ÿ\u00f1\u00d1]*)*[a-zA-ZÀ-ÿ\u00f1\u00d1]+$">
                    </div>
                    {{/each}}
                    <div class="form-group">
                            <select class="form-select btn btn-secondary" name="clase" aria-label="Default select example">
                                    {{#each clases}}
                                      <option value="{{nombre_clase}}">{{nombre_clase}}</option>
                                    {{/each}}
                                    
                            </select>                            
                      </div>
                    <div class=" form-group p-4">
                          <label class="control-label text-center max-auto">Termino : {{fecha_muestra}}</label>
                          <div class="d-flex flex-nowrap"><input name="fecha" class="form-control" type="text" id="from"  placeholder="Date" required="">
                            <svg width="2.5em" height="2.5em" viewBox="0 0 16 16" class="bi bi-calendar-date" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
