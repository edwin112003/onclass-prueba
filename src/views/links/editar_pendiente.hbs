{{#each pendiente}}

<div class="container py-4">
    <div class="row">
        <div class=" col-md-4 mx-auto">
            <div class="card shadow-lg p-1 mb-2 bg-body rounded">
                <div class="card-body">
                    <div class="card-header text-center">
                        <span style="font-size: 1.5rem; color:rgb(95, 22, 95)"><i class="fas fa-cog fa-spin mr-2"></i> EDITAR PENDIENTE</span>
                    </div>
                    <form action="/links/editar_pendiente_vista" method="POST">
                        <div class="from-group">
                            <input type="hidden" value="{{id_pendiente}}" name="id">
                        </div>
                        <div class="form-group my-2">
                            <label for="" style="margin-left: -0.1rem;" class="fst-italic text-dark">
                                <span style="font-size: 1rem; color:rgb(218, 67, 67)"><i class="fas fa-ellipsis-v mr-2"></i></span>Titulo de Pendiente
                            </label>
                            <input type="text" value="{{nombre_pendiente}}" class="form-control" name="nombre"
                                pattern="^[a-zA-ZÀ-ÿ\u00f1\u00d1]+(\s*[a-zA-ZÀ-ÿ\u00f1\u00d1]*)*[a-zA-ZÀ-ÿ\u00f1\u00d1]+$" required>
                        </div>
                        <div class="form-group">
                        <label for="" style="margin-left: -0.1rem;" class="fst-italic text-dark">
                            <span style="font-size: 1rem; color:rgb(218, 67, 67)"><i class="fas fa-signature mr-2"></i></span>Descripción
                        </label>
                            <textarea class="form-control" name="desc" aria-describedby="des" rows="3" minlength="5"
                            required>{{desc_pendiente}}</textarea>
                        </div>
                        {{/each}}
                        <div class="form-group">
                            <div class="row" style="margin-bottom: -1.2rem; margin-top:-0.6rem">
                                <div class="col-6"><label for="" style="margin-left: -0.1rem;" class="fst-italic text-dark">Clase</label></div>
                                <div class="col-6"><label for="" style="margin-left: -0.1rem;" class="fst-italic text-dark">Fecha</label></div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-5">
                                    <select class="form-select btn btn-secondary" name="clase"
                                        aria-label="Default select example" required>
                                        {{#each clases}}
                                        <option value="{{nombre_clase}}">{{nombre_clase}}</option>
                                        {{/each}}

                                    </select>
                                </div>
                                <div class="col-5" style="margin-right: -1rem;">
                                    <div class="d-flex flex-nowrap"><input name="fecha" class="form-control" type="text"
                                            id="from" placeholder="{{fecha_muestra}}" required>
                                    </div>
                                </div>
                                <div class="col-1">
                                    <span style="font-size: 1.5rem;"> <i class="fas fa-calendar-alt"></i> </span>
                                </div>
                            </div>
                        </div>
                        <hr class="my-2">
                        <div class="form-group mt-3">
                            <div class="row">
                                <div class="col-6"><button class="btn btn-danger btn-block" onclick="javascript:window.history.go(-1);">Cancelar <i class="fas fa-times ml-2"></i></button></div>
                                <div class="col-6"><button class="btn btn-success btn-block"> Guardar <i class="fas fa-save ml-2"></i></button></div>                                
                            </div>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
