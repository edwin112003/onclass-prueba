<style>
    body {
        background-image: url('/img/bckg.svg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100%;
    }
</style>

<div class="container p-4">
    <div class="row">
        <div class=" col-md-4 mx-auto">
            <div class="card shadow-lg p-1 mb-2 bg-body rounded">
                <div class="card-body">
                    <div class="card-header text-center mb-3">
                        <span style="font-size: 1.5rem; color:rgb(95, 22, 95)"><i class="fas fa-cog fa-spin mr-2"></i> EDITAR PERFIL</span>
                    </div>
                    <form action="/links/editar_perfil" method="POST">
                    <div class="form-group">
                        <label for="" style="margin-left: 0rem;" class="fst-italic text-dark">
                                <span style="font-size: 1rem; color:rgb(218, 67, 67)"><i class="fas fa-user-tag mr-2"></i></span>UserTag
                        </label>
                        <input type="text" value = "{{perfil.usertag}}" class="form-control" name="usertag" placeholder="usertag" pattern="^[A-Za-z0-9]+$" required>
                    </div>                    
                    <div class="form-group">
                        <label for="" style="margin-left: 0rem;" class="fst-italic text-dark">
                                <span style="font-size: 1rem; color:rgb(218, 67, 67)"><i class="fas fa-envelope mr-2"></i></span> Correo
                        </label>
                        <input type="text" value = "{{perfil.correo_usuario}}" class="form-control" name="correo_usuario" placeholder="Correo" pattern="[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*@[a-zA-Z0-9_]+([.][a-zA-Z0-9_]+)*[.][a-zA-Z]{1,5}" required>
                    </div>
                    <div class="form-group">
                        <label for="" style="margin-left: 0rem;" class="fst-italic text-dark">
                               <span style="font-size: 1rem; color:rgb(218, 67, 67)"><i class="fas fa-at mr-2"></i></span>Username
                        </label>
                        <input type="text" value = "{{perfil.nombre_usuario}}" class="form-control" name="nombre_usuario" placeholder="nombre" pattern="^[a-zA-ZÀ-ÿ\u00f1\u00d1]+(\s*[a-zA-ZÀ-ÿ\u00f1\u00d1]*)*[a-zA-ZÀ-ÿ\u00f1\u00d1]+$" onkeypress="return isText(event)" required>
                    </div>
                    <div class="form-group mt-5 mb-3">
                        <input type="hidden" value="{{perfil.id_usuario}}" name="id">
                        <button class="btn btn-success btn-block">Guardar <i class="fas fa-save ml-2"></i></button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
     function isText(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode < 48 || charCode > 64 || 97<charCode>90) {
                return true;
            }
            return false;
        }
</script>